<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="gluontest.PostsList">
	<ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness" iOS="0, 20, 0, 0" />
	</ContentPage.Padding>
	<ContentPage.Content>
		<StackLayout Padding="0" Margin="0">
			<StackLayout VerticalOptions="Start" Padding="12, 32, 12, 0" Orientation="Horizontal">
				<Label x:Name="labelPostHeader" Text="Posts" />
			</StackLayout>
			<ListView x:Name="listPosts" Style="{StaticResource ApiItemList}">
				<ListView.ItemTemplate>
					<DataTemplate>
						<ViewCell>
							<StackLayout VerticalOptions="CenterAndExpand">
								<Label Style="{StaticResource ListMajorItem}" VerticalOptions="Start" LineBreakMode="TailTruncation" Text="{Binding Path=Body}" />
								<Label Style="{StaticResource ListMinorItem}" VerticalOptions="End" Text="{Binding InsightViewCount}" />
							</StackLayout>
						</ViewCell>
					</DataTemplate>
				</ListView.ItemTemplate>
			</ListView>
			<StackLayout VerticalOptions="End">
				<Button Text="&lt; Back" Style="{StaticResource ActionButton}" Clicked="btnBack_Clicked" />
			</StackLayout>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
